<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_sub1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub 1"
         />

    <EditText

        android:id="@+id/ed_txt_1"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txt_sub1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

></EditText>


    <TextView
    android:id="@+id/tex_Sub2"
        android:text="Sub 2"
        android:layout_marginLeft="190dp"
        android:layout_below="@+id/ed_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    ></TextView>

    <EditText
        android:id="@+id/ed_txt_2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tex_Sub2"
        android:layout_marginLeft="150dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
    ></EditText>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tex_Obtain_marks"
        android:text="Obtain marks"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ed_txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>


    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tex_Percentage"
        android:text="Percentage"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tex_Obtain_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tex_Grade"
        android:text="Grade"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tex_Percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>


    <Button
        android:layout_marginLeft="162dp"
        android:text="RESULT"
        android:id="@+id/btn_RESULT"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tex_Grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
></Button>




</RelativeLayout>