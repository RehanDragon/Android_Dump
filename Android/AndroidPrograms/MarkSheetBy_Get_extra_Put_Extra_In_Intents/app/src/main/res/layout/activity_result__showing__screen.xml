<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context=".Result_Showing_Screen">


    <LinearLayout
        android:id="@+id/layout_for_txt_views"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_1"
            android:layout_width="99dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Obtain marks"></TextView>

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_2"
            android:layout_width="99dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:text="Percentage"></TextView>

        <TextView
            android:textColor="#FFF"
            android:id="@+id/txt_3"
            android:layout_width="99dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:text="Grade"></TextView>


    </LinearLayout>

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:text="Obtain_Marks"
        app:layout_constraintStart_toEndOf="@+id/layout_for_txt_views"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="Percentage"
        app:layout_constraintStart_toEndOf="@+id/layout_for_txt_views"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:textColor="#FFF"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="Grade"
        app:layout_constraintStart_toEndOf="@+id/layout_for_txt_views"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>